<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.umpay.rms.gpd.user.mapper.DbRolePermissionMapper">

    <resultMap type="com.umpay.rms.gpd.user.api.entity.DbRolePermission" id="DbRolePermissionMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="roleId" column="roleId" jdbcType="INTEGER"/>
        <result property="permissionId" column="permissionId" jdbcType="INTEGER"/>
        <result property="appid" column="appid" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="DbRolePermissionMap">
        select
          id, roleId, permissionId, appid
        from db_role_permission
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="DbRolePermissionMap">
        select
          id, roleId, permissionId, appid
        from db_role_permission
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="DbRolePermissionMap">
        select
        id, roleId, permissionId, appid
        from db_role_permission
        <where>
            <if test="id != null and id > 0">
                and id = #{id}
            </if>
            <if test="roleId != null and roleId > 0">
                and roleId = #{roleId}
            </if>
            <if test="permissionId != null and permissionId > 0">
                and permissionId = #{permissionId}
            </if>
            <if test="appid != null and appid != ''">
                and appid = #{appid}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into db_role_permission
        (
        <if test="roleId != null  and roleId > 0">roleId ,</if>
        <if test="permissionId != null  and permissionId > 0">permissionId ,</if>
        <if test="appid != null and appid != ''">appid</if>)
        values
        (
        <if test="roleId != null  and roleId > 0">#{roleId} ,</if>
        <if test="permissionId != null  and permissionId > 0">#{permissionId} ,</if>
        <if test="appid != null and appid != ''">#{appid}</if>
        )
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update db_role_permission
        <set>
            <if test="roleId != null  and roleId > 0">
                roleId = #{roleId},
            </if>
            <if test="permissionId != null and permissionId > 0">
                permissionId = #{permissionId},
            </if>
            <if test="appid != null and appid != ''">
                appid = #{appid},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from db_role_permission where id = #{id}
    </delete>
    <resultMap type="com.umpay.rms.gpd.user.api.entity.DbPermission" id="DbPermissionMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="parentId" column="parent_id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="enname" column="enname" jdbcType="VARCHAR"/>
        <result property="url" column="url" jdbcType="VARCHAR"/>
        <result property="description" column="description" jdbcType="VARCHAR"/>
        <result property="created" column="created" jdbcType="TIMESTAMP"/>
        <result property="updated" column="updated" jdbcType="TIMESTAMP"/>
        <result property="appid" column="appid" jdbcType="VARCHAR"/>
    </resultMap>
    <select id="selectRolePermission" resultMap="DbPermissionMap">


select c.id,
       c.parent_id,
       c.name,
       c.enname,
       c.url,
       c.description,
       c.created,
       c.updated,
       c.appid
from db_user_role a
         left join db_role_permission drp on a.roleId = drp.roleId
         left join db_permission c on c.id = drp.permissionId
where a.userId = #{userId}
    </select>

</mapper>