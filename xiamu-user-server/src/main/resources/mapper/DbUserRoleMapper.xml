<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.umpay.rms.gpd.user.mapper.DbUserRoleMapper">

    <resultMap type="com.umpay.rms.gpd.user.api.entity.DbUserRole" id="DbUserRoleMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="userId" column="userId" jdbcType="INTEGER"/>
        <result property="roleId" column="roleId" jdbcType="INTEGER"/>
        <result property="appid" column="appid" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="DbUserRoleMap">
        select
          id, userId, roleId, appid
        from db_user_role
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="DbUserRoleMap">
        select
          id, userId, roleId, appid
        from db_user_role
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="DbUserRoleMap">
        select
          id, userId, roleId, appid
        from db_user_role
        <where>
            <if test="id != null and id > 0">
                and id = #{id}
            </if>
            <if test="userId != null and userId > 0">
                and userId = #{userId}
            </if>
            <if test="roleId != null and  roleId> 0">
                and roleId = #{roleId}
            </if>
            <if test="appid != null and appid != ''">
                and appid = #{appid}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into db_user_role
        (<if test="userId != null">userId , </if><if test="roleId != null">roleId , </if><if test="appid != null and appid != ''">appid </if>)
        values
        ( <if test="userId != null">#{userId} ,</if>  <if test="roleId != null">#{roleId} ,</if>  <if test="appid != null and appid != ''">#{appid} </if> )
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update db_user_role
        <set>
            <if test="userId != null and userId > 0">
                userId = #{userId},
            </if>
            <if test="roleId != null and roleId > 0">
                roleId = #{roleId},
            </if>
            <if test="appid != null and appid != ''">
                appid = #{appid},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from db_user_role where id = #{id}
    </delete>
    <select id="selectUserRole" resultType="com.umpay.rms.gpd.user.api.entity.DbRole">
        select b.id,b.parentId,b.name , b.enname from db_user_role a left join db_role b on a.roleId = b.id where a.userId = #{userId}
    </select>
    <update id="updateUserRole" parameterType="java.util.List" >
        <foreach collection="list" item="item" index="index" separator=";">
            update db_user_role set  roleId = #{item.roleId}  where userId=#{item.userId}
        </foreach>
    </update>
</mapper>